<UserControl x:Class="PMLMCustomerClub.CustomControls.ComboBoxEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMLMCustomerClub.CustomControls"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="390">
    <DockPanel>
        <Label x:Name="TitleLabel"
               Height="40"
               Width="140"
               Content="{Binding Title}"
               FontSize="20"
               DockPanel.Dock="Left"
               HorizontalAlignment="Left"
               VerticalContentAlignment="Center"
               />

        <dxe:ComboBoxEdit x:Name="Editor"
                          Height="40"
                          Width="{Binding EditorWidth}"
                          DockPanel.Dock="Right"
                          HorizontalAlignment="Right"
                          CornerRadius="10"
                          FontSize="18"
                          ItemsSource="{Binding}"
                          IsEnabled="{Binding EditorEnable}"
                          EditValueChanged="Editor_EditValueChanged"/>

    </DockPanel>
</UserControl>
