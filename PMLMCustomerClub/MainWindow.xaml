<dx:ThemedWindow 
    x:Class="PMLMCustomerClub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="MainWindow" Height="400" Width="350">
    <Grid>
        <Button x:Name="StoreButton" Height="40" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Content="Store" FontSize="20" Click="StoreButton_Click"/>
        <Button x:Name="OrdersButton" Height="40" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,100,0,0" Content="Orders" FontSize="20" Click="OrdersButton_Click"/>
        <Button x:Name="CustomersButton" Height="40" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,150,0,0" Content="Customers" FontSize="20" Click="CustomersButton_Click"/>
        <Button x:Name="ProductsButton" Height="40" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,200,0,0" Content="Products" FontSize="20" Click="ProductsButton_Click"/>
        
        <Button x:Name="ExitButton" Height="40" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,50" Content="Exit" FontSize="20" Click="ExitButton_Click"/>
    </Grid>
</dx:ThemedWindow>
